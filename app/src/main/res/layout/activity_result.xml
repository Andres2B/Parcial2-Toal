<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/normalResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="20dp"
        android:text="Precio sin IVA:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/bundleResultTextView"
        android:layout_width="224dp"
        android:layout_height="80dp"
        android:layout_below="@id/normalResultTextView"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="20dp"
        android:text="Total IVA:"
        android:textSize="24sp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="166dp"
        android:layout_height="86dp"
        android:layout_below="@id/bundleResultTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="124dp"
        android:text="Volver Productos" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="136dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="121dp"
        android:text="Total:"
        android:textSize="24sp" />


</RelativeLayout>
